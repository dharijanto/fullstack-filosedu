    div.container
      h1.text-center Question Start
      h4.text-center 
        | Question End in 
        | <span id="timer"></span>
        | seconds
      hr

      form#questionSubmit(method="POST" action="/done")
        each val, index in question
          div.form-group
          | #{index + 1}. 
          | #{val} 
          input.form-control(name="answer[]" type="text")

        div.text-center(style="margin-top:50px;margin-bottom:50px;")
          a.btn.btn-primary.btn_submit_answer(href="javascript:void(0);") SUBMIT ANSWER

    script(src="https://code.jquery.com/jquery-3.2.1.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
    script.
      $('.btn_submit_answer').on('click', function (e) {
        if (confirm('Are you sure want to submit the answer? Please check again !!')){
           document.getElementById('questionSubmit').submit()
        }else{
           alert("Yep. Please check again.")
        }
      })

