extends layout/index.pug

block contents
  div.container
    if user
      p= 'Welcome Back, ' + user.username
    each topic, index in topics
      .panel-group
        .panel.panel-default
          .panel-heading
              h2.panel-title
                  a(data-toggle="collapse", href=`#collapse_${index}`) #{topic.topic}
          .panel-collapse.collapse(id=`collapse_${index}`)
            ul.list-group
              - var numbering = 0;
              each subtopic, index2 in subtopics
                if (subtopic.topicId === topic.id)
                  li.list-group-item
                    | #{++numbering}. 
                    a(href=`/topic/${subtopic.id}/${getSlug(subtopic.subtopic)}` class="") #{subtopic.subtopic}
