extends ../layout/index.pug
include ../includes/utils.pug

append head
  link(rel="stylesheet" href="/assets/vendor/toastr/toastr.css")
  style.
    .btn {
      margin: 1%;
    }

    #notes {
      font-size: 120%;
      background-color: #ffc800;
      padding: 1%;
    }
    .input-group {
      margin: auto;
    }
    .topic-result {
      margin: 1%;
      min-height: 350px;
    }

append initialization
  - const activePage = 'modules'

block contents
  div.container
    if user
      p= 'Selamat Datang, ' + user.fullName || user.username
    .row
      for topicResult, idx in topicResults
        .col-md-4.jumbotron.text-center.topic-result
          p
            h2 #{idx + 1}. #{topicResult.topicName}
            if (topicResult.skipped)
              | Topik ini dilewati.
            else
              h4 Nilai:
              strong #{topicResult.score} / 100
              br
              span #[+renderScoreStars(topicResult.score, 20)]
              br
              br
              h4 Ketangkasan:
              if (topicResult.score >= 75)
                strong #{topicResult.timeScore} / 100
                br
                span #[+renderScoreStars(topicResult.timeScore, 20)]
                br
                br
                | Waktu selesai: #[strong #{topicResult.timeFinish}] detik
                br
                | Waktu ideal: <= #[strong #{topicResult.idealTime}] detik
              else
                | Hanya nilai diatas 75 yang mendapat penilaian ketangkasan
    .row
      .col-md-12
        a.btn.btn-primary#btn-retake-exercise(href="/competency-exercise") Ulangi
append scripts
  script(src=`${bundle}`)
