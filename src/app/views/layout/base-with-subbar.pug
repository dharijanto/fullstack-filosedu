    // Required by sidebar
    .overlay
      nav.navbar.navbar-default
        .container-fluid
          nav#sidebar-wrapper.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
            ul.nav.sidebar-nav
              li.sidebar-brand
                a(href='https://www.filosedu.com') Filosedu
              li
                a(href='/login') Login
              li
                a(href='/') Area Belajar
              li
                a(href='/competency-exercise') Uji Kompetensi
    #page-content-wrapper.section-fix
      button.hamburger.is-closed(type='button' data-toggle='offcanvas')
        span.hamb-top
        span.hamb-middle
        span.hamb-bottom
      nav.subbar
        .row-bar
          .col-lg-4
            h1.logo-edu
              a(href='#') Filosedu
          .col-lg-4
            //.inn-bar-link
              a(href='#') Uji Kompetensi
              a.active(href='#') Arena Belajar
          .col-lg-4
            .inn-bar-account
              a(href='#')
                | Hello,
                span John Doe
        //.row-minibar
          a.cuma-mobile(href='#')
            i.fa.fa-chevron-left(aria-hidden='true')
          .col-lg-12
            h1 Matematika
      block pageContent